<%- include('../partials/head.ejs') %>
<body>
    <%- include('../partials/nav.ejs') %>
    <div class="pageBox">
        <h2 class="pageTitle">
            Finance Tracker Application
        </h2>
    </div>
    <div class="card-container">
        <ul class="card-list">
            <% if (entries.length > 0) { %>
                <% entries.forEach(entry => { %>
                    <li class="card">
                        <h4><%= entry.title %></h4>
                        <p><%= entry.amount %></p>
                    </li>
                <% }) %>
            <% } else { %>
                <h1>No Entries</h1>
            <% } %>
        </ul>
    </div>
</body>
</html>